{
  "manifest_version": 3,
  "name": "Trailer Protection",
  "description": "Allows users to flag movie trailers as amazing, showing too much, or containing spoilers. Then it will alert users of the reports.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "TrailerProtection.png"
  }
}
